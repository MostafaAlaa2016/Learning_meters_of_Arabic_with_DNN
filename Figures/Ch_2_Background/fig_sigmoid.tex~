\begin{axis}[
    xmin=-2.5, xmax=2.5,
    ymin=-1.5, ymax=1.5,
    axis lines=center,
    axis on top=true,
    domain=-2.5:2.5,
    ylabel=$y$,
    xlabel=$x$,
    ]

    \addplot [mark=none,draw=blue,ultra thick] {1/(1+exp(-\x))};
    \node [right, blue] at (axis cs: 1,0.7) {$y = \frac{1}{1+\exp(-\x)}$};

